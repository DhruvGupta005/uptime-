// Prisma schema for BetterUptime-like app
generator client {
  provider = "prisma-client-js"
  engineType    = "binary"
  binaryTargets   = ["native", "rhel-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?

  accounts      Account[]
  sessions      Session[]

  monitors      Monitor[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// App models
model Monitor {
  id           String     @id @default(cuid())
  userId       String
  name         String
  url          String
  method       String     @default("GET")
  intervalSec  Int        @default(60)
  timeoutMs    Int        @default(10000)
  headersJson  String?    @db.Text
  body         String?    @db.Text
  lastChecked  DateTime?
  isPaused     Boolean    @default(false)
  webhookUrl   String?    @db.Text

  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  checks Check[]
  incidents Incident[]
  alerts Alert[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Check {
  id         String   @id @default(cuid())
  monitorId  String
  statusCode Int?
  ok         Boolean
  latencyMs  Int?
  error      String?  @db.Text
  createdAt  DateTime @default(now())

  monitor Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)

  @@index([monitorId, createdAt])
}

model Incident {
  id              String    @id @default(cuid())
  monitorId       String
  startedAt       DateTime  @default(now())
  resolvedAt      DateTime?
  reason          String?

  monitor Monitor @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  alerts  Alert[]

  @@index([monitorId, startedAt])
}

model Alert {
  id         String    @id @default(cuid())
  monitorId  String
  incidentId String?
  type       String    // "down" | "recovery"
  status     String    // "sent" | "failed"
  message    String    @db.Text
  sentAt     DateTime  @default(now())
  error      String?   @db.Text
  createdAt  DateTime  @default(now())

  monitor  Monitor   @relation(fields: [monitorId], references: [id], onDelete: Cascade)
  incident Incident? @relation(fields: [incidentId], references: [id], onDelete: SetNull)

  @@index([monitorId, sentAt])
}
